}

.expand-btn {
  width: 72rpx !important;
  height: 72rpx !important;
  border-radius: 50% !important;
  background: #f8f9fa !important;
  color: #6c757d !important;
  font-size: 32rpx !important;
  transition: all 0.3s ease !important;
  position: relative !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-left: auto !important;
}

.expand-btn::before,
.expand-btn::after {
  content: none !important;
  border: none !important;
  background: transparent !important;
}

.expand-btn.expanded {
  transform: rotate(180deg) !important;
}

.expand-icon {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-size: 32rpx !important;
  line-height: 1 !important;
}

.collection-content {
  border-top: 1rpx solid #e9ecef !important;
  background: #f8f9fa !important;
  padding: 32rpx !important;
}

.empty-collection {
  padding: 64rpx 0 !important;
  text-align: center !important;
  font-size: 28rpx !important;
  color: #6c757d !important;
}

.add-song-btn {
  margin-top: 24rpx !important;
  background: #1976d2 !important;
  color: #ffffff !important;
  padding: 24rpx 32rpx !important;
  border-radius: 50rpx !important;
  font-size: 28rpx !important;
  border: none !important;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4) !important;
  position: relative !important;
}

.add-song-btn::before,
.add-song-btn::after {
  content: none !important;
  border: none !important;
  background: transparent !important;
}

.songs-list {
  padding-top: 24rpx !important;
  display: flex !important;
  flex-direction: column !important;
  gap: 16rpx !important;
}

.song-item {
  display: flex !important;
  align-items: center !important;
  gap: 16rpx !important;
  padding: 20rpx 0 !important;
  border-bottom: 1rpx solid #e9ecef !important;
  background: #ffffff !important;
  border-radius: 16rpx !important;
  padding: 20rpx 24rpx !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04) !important;
  transition: all 0.2s ease !important;
}

.song-item:last-child {
