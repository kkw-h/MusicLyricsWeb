.collection-page {
  padding: 40rpx !important;
  box-sizing: border-box !important;
  min-height: 100vh !important;
  background: #f8f9fa !important;
}

.collection-header {
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  margin-bottom: 40rpx !important;
  padding: 0 !important;
}

.collection-title {
  font-size: 48rpx !important;
  font-weight: 600 !important;
  color: #2c3e50 !important;
  margin: 0 !important;
}

.add-btn {
  display: inline-flex !important;
  align-items: center !important;
  gap: 16rpx !important;
  background: #1976d2!important;
  color: #ffffff !important;
  padding: 24rpx 40rpx !important;
  border-radius: 20rpx !important;
  font-size: 28rpx !important;
  border: none !important;
  box-shadow: 0 8rpx 32rpx rgba(61, 92, 230, 0.4) !important;
  transition: all 0.3s ease !important;
  position: relative !important;
  width: 100% !important;
}

.add-btn::before,
.add-btn::after {
  content: none !important;
  border: none !important;
  background: transparent !important;
}

.add-icon {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  width: 32rpx !important;
  height: 32rpx !important;
  border-radius: 50% !important;
  background: rgba(255, 255, 255, 0.2) !important;
  font-size: 24rpx !important;
  font-weight: bold !important;
}

.empty-state {
  text-align: center !important;
  padding: 160rpx 40rpx !important;
  color: #6c757d !important;
  background: #ffffff !important;
  border-radius: 24rpx !important;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08) !important;
  margin: 40rpx 0 !important;
}

.empty-icon {
  font-size: 96rpx !important;
  margin-bottom: 32rpx !important;
  display: block !important;
  opacity: 0.6 !important;
}

.empty-title {
  font-size: 34rpx !important;
  font-weight: 600 !important;
  margin-bottom: 16rpx !important;
  color: #2c3e50 !important;
  display: block !important;
}

.empty-tip {
  font-size: 28rpx !important;
  color: #6c757d !important;
  margin-bottom: 40rpx !important;
  display: block !important;
  line-height: 1.5 !important;
}

.create-first-btn {
  background: #1976d2!important;
  color: #ffffff !important;
  padding: 24rpx 48rpx !important;
  border-radius: 50rpx !important;
  font-size: 28rpx !important;
  border: none !important;
  box-shadow: 0 8rpx 32rpx rgba(61, 92, 230, 0.4) !important;
  position: relative !important;
}

.create-first-btn::before,
.create-first-btn::after {
  content: none !important;
  border: none !important;
  background: transparent !important;
}

.collections-list {
  display: flex !important;
  flex-direction: column !important;
  gap: 24rpx !important;
}

.collection-item {
  background: #ffffff !important;
  border-radius: 24rpx !important;
  margin-bottom: 0 !important;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08) !important;
  overflow: hidden !important;
  border: 1rpx solid rgba(0, 0, 0, 0.05) !important;
  transition: all 0.3s ease !important;
}

.collection-header-row {
  display: flex !important;
  flex-direction: column !important;
  padding: 32rpx !important;
  cursor: pointer !important;
  transition: background-color 0.2s ease !important;
  gap: 16rpx !important;
}

.collection-header-row:hover {
  background: #f8f9fa !important;
}

/* 第一行：标题 */
.collection-title-row {
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  width: 100% !important;
}

.collection-info {
  flex: 1 !important;
  min-width: 0 !important;
}

.collection-name {
  font-size: 32rpx !important;
  font-weight: 600 !important;
  color: #2c3e50 !important;
  display: block !important;
  margin: 0 !important;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  white-space: nowrap !important;
}

/* 第二行：合集信息 */
.collection-meta-row {
  display: flex !important;
  align-items: center !important;
  width: 100% !important;
}

.collection-meta {
  font-size: 24rpx !important;
  color: #6c757d !important;
  display: block !important;
  line-height: 1.4 !important;
  margin: 0 !important;
}

/* 第三行：操作图标 */
.collection-actions-row {
  display: flex !important;
  align-items: center !important;
  justify-content: flex-start !important;
  width: 100% !important;
  gap: 16rpx !important;
}

.collection-actions {
  display: flex !important;
  align-items: center !important;
  gap: 12rpx !important;
  flex-wrap: wrap !important;
  justify-content: flex-start !important;
}

.action-btn {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  width: 72rpx !important;
  height: 72rpx !important;
  font-size: 32rpx !important;
  transition: all 0.2s ease !important;
  position: relative !important;
  box-sizing: border-box !important;
  margin: 4rpx !important;
  cursor: pointer !important;
}

.action-btn:hover {
  transform: scale(1.05) !important;
}

.action-btn.disabled {
  opacity: 0.5 !important;
  cursor: not-allowed !important;
  pointer-events: none !important;
}

.action-btn::before,
.action-btn::after {
  content: none !important;
  border: none !important;
  background: transparent !important;
}

.action-btn:disabled {
  background: #e9ecef !important;
  color: #adb5bd !important;
  opacity: 0.6 !important;
}


.share-btn {
  background: #e8f5e8 !important;
  color: #2e7d32 !important;
}



.cache-btn.caching {
  position: relative !important;
  color: #1976d2 !important;
  background: #e3f2fd !important;
}
.btn-icon {
  width: 32rpx !important;
  height: 32rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.expand-icon {
  font-size: 32rpx !important;
  line-height: 1 !important;
}

.cache-spinner {
  width: 32rpx !important;
  height: 32rpx !important;
  border-radius: 50% !important;
  border: 4rpx solid rgba(25, 118, 210, 0.2) !important;
  border-top-color: #1976d2 !important;
