.share-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 0;
  box-sizing: border-box;
}

.container {
  max-width: 700rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 0.12);
  border-radius: 32rpx;
  padding: 40rpx;
  backdrop-filter: blur(16rpx);
  color: #ffffff;
  box-shadow: 0 32rpx 64rpx rgba(0, 0, 0, 0.2);
}

.header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: none;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 32rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
}

.loading,
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
  padding: 160rpx 0;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #ffffff;
  animation: spin 1s linear infinite;
}

.error-icon {
  font-size: 96rpx;
}

.error-title {
  font-size: 36rpx;
  font-weight: 600;
}

.retry-btn {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 28rpx;
  border: none;
}

.collection-content {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.collection-info {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.collection-name {
  font-size: 34rpx;
  font-weight: 700;
}

.collection-desc {
  font-size: 28rpx;
  opacity: 0.85;
}

.meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 24rpx;
  opacity: 0.8;
}

.songs-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.songs-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.song-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 18rpx;
  background: rgba(25, 118, 210, 0.2);
}

.song-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.song-title {
  font-size: 28rpx;
  font-weight: 600;
}

.song-artist {
  font-size: 24rpx;
  opacity: 0.75;
}

.play-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: none;
  background: rgba(255, 255, 255, 0.3);
  color: #ffffff;
  font-size: 28rpx;
}

.import-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: stretch;
}

.import-btn {
  padding: 24rpx;
  border-radius: 16rpx;
  background: #00c853;
  color: #ffffff;
  font-size: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.import-btn:disabled {
  background: rgba(255, 255, 255, 0.2);
}

.spinner-small {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  animation: spin 1s linear infinite;
}

.import-tip {
  font-size: 24rpx;
  opacity: 0.75;
  text-align: center;
}

.copy-link-btn {
  padding: 20rpx;
  border-radius: 12rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.4);
  color: #ffffff;
  font-size: 28rpx;
  background: transparent;
}

.success-toast {
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toast-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 36rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 28rpx;
  backdrop-filter: blur(6rpx);
}

.toast-icon {
  font-size: 32rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
