.search-page {
  padding: 40rpx;
  box-sizing: border-box;
}

.search-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.search-title {
  color: #333333;
  font-size: 48rpx;
  font-weight: 600;
}

.search-form {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.search-input {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  border: 2rpx solid #d0d7de;
  padding: 0 36rpx;
  font-size: 28rpx;
  background: #f5f7fa;
  box-sizing: border-box;
}

.search-input:focus {
  border-color: #1976d2;
}

.search-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
  color: #ffffff;
  border: none;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
}

.search-btn:disabled {
  background: #b0bec5;
  color: #f1f1f1;
}

.platform-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  flex-wrap: wrap;
}

.platform-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.platform-options {
  display: flex;
  gap: 32rpx;
}

.platform-option {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #555555;
}

.search-results {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.results-header {
  padding: 40rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.results-title {
  color: #333333;
  font-size: 34rpx;
  font-weight: 600;
}

.results-count {
  color: #666666;
  font-size: 28rpx;
}

.loading-state {
  padding: 80rpx 40rpx;
  text-align: center;
  color: #666666;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 6rpx solid #f0f0f0;
  border-top-color: #1976d2;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.results-list {
  max-height: 800rpx;
}

.song-item {
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.song-item:last-child {
  border-bottom: none;
}

.song-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.song-title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.song-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
}

.song-artist {
  font-size: 26rpx;
  color: #666666;
}

.song-album {
  font-size: 24rpx;
  color: #999999;
}

.song-platform {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #1976d2;
  background: rgba(25, 118, 210, 0.12);
  font-weight: 600;
  flex-shrink: 0;
}

.song-actions {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  flex-wrap: wrap;
}

.collection-btn {
  flex: 1 1 auto;
  min-width: 0;
  background: #4caf50;
  color: #ffffff;
  padding: 20rpx 36rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: none;
  box-shadow: 0 12rpx 24rpx rgba(76, 175, 80, 0.2);
  text-align: center;
}

.play-btn {
  flex: 0 0 88rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: none;
  background: #f5f5f5;
  color: #1976d2;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(25, 118, 210, 0.12);
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #666666;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999999;
  margin-top: 16rpx;
}

.error-message {
  background: #ffebee;
  border: 2rpx solid #f44336;
  color: #c62828;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.clear-error-btn {
  border: none;
  background: transparent;
  color: #c62828;
  font-size: 28rpx;
}

.modal-wrapper {
  background: #ffffff;
  border-radius: 24rpx;
  width: 92%;
  max-width: 600rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.25);
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  border: none;
  background: transparent;
  font-size: 40rpx;
  color: #999999;
}

.modal-body {
  padding: 40rpx;
  max-height: 720rpx;
  overflow-y: auto;
}

.selected-song-info {
  margin-bottom: 32rpx;
}

.selected-song-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.selected-song-artist {
  font-size: 26rpx;
  color: #666666;
}

.no-collections {
  text-align: center;
  color: #666666;
  font-size: 28rpx;
}

.create-collection-btn {
  margin-top: 32rpx;
  width: 100%;
  background: #1976d2;
  color: #ffffff;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.collections-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.collections-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.collection-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
  color: #333333;
}

.collection-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.collection-name {
  font-size: 28rpx;
  font-weight: 600;
}

.collection-count {
  font-size: 24rpx;
  color: #666666;
}

.collection-arrow {
  font-size: 32rpx;
  color: #1976d2;
}

.create-new-btn {
  width: 100%;
  border: 2rpx dashed #cccccc;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666666;
  background: #f7f9fc;
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  margin-top: 32rpx;
}

.cancel-btn {
  flex: 0 0 auto;
  background: #f5f5f5;
  color: #666666;
  padding: 20rpx 32rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
}

.confirm-btn {
  flex: 0 0 auto;
  background: #1976d2;
  color: #ffffff;
  padding: 20rpx 36rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
}

.confirm-btn:disabled {
  background: #b0bec5;
}

.toast-text {
  font-size: 26rpx;
  opacity: 0.9;
}

@media screen and (max-width: 750px) {
  .song-actions {
    flex-direction: column;
    align-items: stretch;
  }

  .collection-btn {
    width: 100%;
  }

  .play-btn {
    align-self: flex-end;
  }
}

@media screen and (max-width: 500px) {
  .search-page {
    padding: 32rpx 24rpx;
  }

  .song-item {
    padding: 24rpx;
  }

  .song-title {
    font-size: 30rpx;
  }

  .song-artist {
    font-size: 24rpx;
  }

  .collection-btn {
    padding: 18rpx 24rpx;
    font-size: 24rpx;
  }

  .play-btn {
    width: 72rpx;
    height: 72rpx;
    flex: 0 0 72rpx;
  }
}
