.search-page {
  padding: 40rpx;
  box-sizing: border-box;
}

.search-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.search-title {
  color: #333333;
  font-size: 48rpx;
  font-weight: 600;
}

.search-form {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.search-input {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  border: 2rpx solid #d0d7de;
  padding: 0 36rpx;
  font-size: 28rpx;
  background: #f5f7fa;
  box-sizing: border-box;
}

.search-input:focus {
  border-color: #1976d2;
}

.search-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
  color: #ffffff;
  border: none;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
}

.search-btn:disabled {
  background: #b0bec5;
  color: #f1f1f1;
}

.platform-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  flex-wrap: wrap;
}

.platform-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.platform-options {
  display: flex;
  gap: 32rpx;
}

.platform-option {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #555555;
}

.search-results {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.results-header {
  padding: 40rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.results-title {
  color: #333333;
  font-size: 34rpx;
  font-weight: 600;
}

.results-count {
  color: #666666;
  font-size: 28rpx;
}

.loading-state {
  padding: 80rpx 40rpx;
  text-align: center;
  color: #666666;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 6rpx solid #f0f0f0;
  border-top-color: #1976d2;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.results-list {
  max-height: 800rpx;
}

.song-item {
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.song-item:last-child {
  border-bottom: none;
}

.song-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.song-title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.song-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
}

.song-artist {
  font-size: 26rpx;
  color: #666666;
}

.song-album {
  font-size: 24rpx;
  color: #999999;
}

.song-platform {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #1976d2;
  background: rgba(25, 118, 210, 0.12);
  font-weight: 600;
  flex-shrink: 0;
}

.song-actions {
  width: 100% !important;
  display: flex !important;
  flex-direction: row !important;
  align-items: center !important;
  justify-content: space-between !important;
  gap: 16rpx !important;
  flex-wrap: nowrap !important;
  margin-top: 16rpx !important;
  box-sizing: border-box !important;
}

.song-actions .collection-btn {
  flex: 1 !important;
  min-width: 0 !important;
  max-width: calc(100% - 88rpx) !important;
  background: #4caf50 !important;
  background-color: #4caf50 !important;
  color: #ffffff !important;
  padding: 18rpx 24rpx !important;
  border-radius: 40rpx !important;
  font-size: 26rpx !important;
  border: none !important;
  box-shadow: 0 8rpx 16rpx rgba(76, 175, 80, 0.2) !important;
  text-align: center !important;
  white-space: nowrap !important;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  height: 72rpx !important;
  line-height: 1 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  position: relative !important;
  box-sizing: border-box !important;
}

.song-actions .collection-btn::after {
  border: none !important;
  background: transparent !important;
  content: none !important;
}

.song-actions .play-btn {
  flex: 0 0 72rpx !important;
  width: 72rpx !important;
  height: 72rpx !important;
  min-width: 72rpx !important;
  min-height: 72rpx !important;
  max-width: 72rpx !important;
  max-height: 72rpx !important;
  border-radius: 50% !important;
  border: none !important;
  background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%) !important;
  background-color: #1976d2 !important;
  color: #ffffff !important;
  font-size: 28rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 8rpx 16rpx rgba(25, 118, 210, 0.3) !important;
  padding: 0 !important;
  margin: 0 !important;
  position: relative !important;
  box-sizing: border-box !important;
}

.song-actions .play-btn::after {
  border: none !important;
  background: transparent !important;
  content: none !important;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #666666;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999999;
  margin-top: 16rpx;
}

.error-message {
  background: #ffebee;
  border: 2rpx solid #f44336;
  color: #c62828;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.clear-error-btn {
  border: none;
  background: transparent;
  color: #c62828;
  font-size: 28rpx;
}

/* 弹框遮罩层 */
.modal-overlay {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  background: rgba(0, 0, 0, 0.5) !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  z-index: 1000 !important;
  padding: 40rpx !important;
  box-sizing: border-box !important;
}

/* 表单输入框样式 */
.form-group {
  margin-bottom: 32rpx !important;
}

.form-group label {
  display: block !important;
  font-size: 28rpx !important;
  color: #333333 !important;
  font-weight: 500 !important;
  margin-bottom: 16rpx !important;
}

.form-input {
  width: 100% !important;
  height: 80rpx !important;
  border: 2rpx solid #e0e0e0 !important;
  border-radius: 12rpx !important;
  padding: 0 24rpx !important;
  font-size: 28rpx !important;
  color: #333333 !important;
  background: #ffffff !important;
  box-sizing: border-box !important;
}

.form-input:focus {
  border-color: #1976d2 !important;
  outline: none !important;
}

.form-input::placeholder {
  color: #999999 !important;
}

/* 文本域样式 */
.form-textarea {
  width: 100% !important;
  min-height: 120rpx !important;
  max-height: 200rpx !important;
  border: 2rpx solid #e0e0e0 !important;
  border-radius: 12rpx !important;
  padding: 20rpx 24rpx !important;
  font-size: 28rpx !important;
  color: #333333 !important;
  background: #ffffff !important;
  box-sizing: border-box !important;
  resize: none !important;
  line-height: 1.5 !important;
}

.form-textarea:focus {
  border-color: #1976d2 !important;
  outline: none !important;
}

.form-textarea::placeholder {
  color: #999999 !important;
}

.modal-wrapper {
  background: #ffffff;
  border-radius: 24rpx;
  width: 92%;
  max-width: 600rpx;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.25);
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  border: none !important;
  background: transparent !important;
  font-size: 40rpx !important;
  color: #999999 !important;
  padding: 8rpx !important;
  margin-left: auto !important;
  flex-shrink: 0 !important;
  width: 56rpx !important;
  height: 56rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  border-radius: 50% !important;
  transition: all 0.2s ease !important;
  margin: 0 !important;
}

.close-btn:hover {
  background: rgba(0, 0, 0, 0.05) !important;
  color: #666666 !important;
}

.modal-body {
  padding: 40rpx !important;
  max-height: 60vh !important;
  overflow-y: auto !important;
  display: flex !important;
  flex-direction: column !important;
}

.selected-song-info {
  margin-bottom: 32rpx;
  background-color: #f7f9fc !important;
  padding: 24rpx 32rpx !important;
  border-radius: 16rpx !important;
}

.selected-song-title {
  font-size: 30rpx !important;
  font-weight: 600 !important;
  color: #333333 !important;
}

.selected-song-artist {
  font-size: 26rpx !important;
  color: #666666 !important;
}

.no-collections {
  text-align: center;
  color: #666666;
  font-size: 28rpx;
}

.create-collection-btn {
  margin-top: 32rpx;
  width: 100%;
  background: #1976d2;
  color: #ffffff;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.collections-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.collections-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.collection-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
  color: #333333;
}

.collection-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.collection-name {
  font-size: 28rpx;
  font-weight: 600;
}

.collection-count {
  font-size: 24rpx;
  color: #666666;
}

.collection-arrow {
  font-size: 32rpx;
  color: #1976d2;
}

.create-new-btn {
  width: 100% !important;
  border: 2rpx dashed #cccccc !important;
  padding: 24rpx 32rpx !important;
  border-radius: 16rpx !important;
  font-size: 28rpx !important;
  color: #666666 !important;
  background: #f7f9fc !important;
  margin: 0 auto !important;
}

.modal-actions {
  display: flex !important;
  justify-content: flex-end !important;
  gap: 24rpx !important;
  margin-top: 32rpx !important;
  padding-top: 24rpx !important;
  border-top: 2rpx solid #f0f0f0 !important;
  flex-shrink: 0 !important;
  width: 100% !important;
}

.cancel-btn {
  flex: 0 0 auto !important;
  background: #f5f5f5 !important;
  color: #666666 !important;
  padding: 20rpx 32rpx !important;
  border-radius: 12rpx !important;
  border: none !important;
  font-size: 28rpx !important;
  width: 40% !important;
}

.confirm-btn {
  flex: 0 0 auto !important;
  background: #1976d2 !important;
  color: #ffffff !important;
  padding: 20rpx 36rpx !important;
  border-radius: 12rpx !important;
  border: none !important;
  font-size: 28rpx !important;
  width: 40% !important;
}

.confirm-btn:disabled {
  background: #b0bec5 !important;
}

.toast-text {
  font-size: 26rpx;
  opacity: 0.9;
}

@media screen and (max-width: 750px) {
  .song-actions {
    flex-direction: column;
    align-items: stretch;
  }

  .collection-btn {
    width: 100%;
  }

  .play-btn {
    align-self: flex-end;
  }
}

@media screen and (max-width: 500px) {
  .search-page {
    padding: 32rpx 24rpx;
  }

  .song-item {
    padding: 24rpx;
  }

  .song-title {
    font-size: 30rpx;
  }

  .song-artist {
    font-size: 24rpx;
  }

  .collection-btn {
    padding: 18rpx 24rpx;
    font-size: 24rpx;
  }

  .play-btn {
    width: 72rpx;
    height: 72rpx;
    flex: 0 0 72rpx;
  }
}
